<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.GameCenterFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/game_menu">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F3F3F3">

            <cn.bingoogolapple.bgabanner.BGABanner
                android:id="@+id/banner"
                style="@style/BannerDefaultStyle"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:banner_indicatorGravity="bottom|left"
                app:banner_pointDrawable="@drawable/bga_banner_selector_point_solid"
                app:banner_transitionEffect="alpha" />

            <LinearLayout
                android:id="@+id/magic_cube"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/sudoku"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:padding="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/button_card1_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="魔方"
                    android:textSize="30dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="挑战手速"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="开发智力"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/sudoku"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintLeft_toRightOf="@id/magic_cube"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_card2_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="数独"
                    android:textSize="30dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="全神贯注"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="训练思维"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id3"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/magic_cube"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/id4"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_card3_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="五子棋"
                    android:textSize="30dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="人生如棋"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="棋如人生"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/id4"
                android:layout_width="160dp"
                android:layout_height="160dp"
                app:layout_constraintTop_toBottomOf="@id/sudoku"
                app:layout_constraintLeft_toRightOf="@id/id3"
                app:layout_constraintRight_toRightOf="parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/button_card4_selector"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="华容道"
                    android:textSize="30dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="变化多端"
                    android:textSize="15dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="百玩不厌"
                    android:textSize="15dp"/>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/magic_cube_mode"
            android:visibility="invisible"
            >
            <Button
                android:id="@+id/order2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_order2_selector"
                android:text="二阶魔方"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                />
            <Button
                android:id="@+id/order3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_order3_selector"
                android:text="三阶魔方"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/order4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_order4_selector"
                android:text="四阶魔方"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/get_photo"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_get_selector"
                android:text="拍照读取"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/magic_cube_back"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_start_selector"
                android:text="返回"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/sudoku_mode"
            android:visibility="invisible"
            >
            <Button
                android:id="@+id/sudoku_order8"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_order2_selector"
                android:text="简单"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/sudoku_order11"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_order3_selector"
                android:text="普通"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
            <Button
                android:id="@+id/sudoku_order13"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_order4_selector"
                android:text="困难"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:textColor="#FFFFFF"
                />
            <Button
                android:id="@+id/sudoku_back"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/button_start_selector"
                android:text="返回"
                android:textSize="30dp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp"
                />
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>