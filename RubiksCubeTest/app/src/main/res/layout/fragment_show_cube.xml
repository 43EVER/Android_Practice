<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rubikscube_test.MainActivity">

    <com.catalinjurjiu.animcubeandroid.AnimCube
        android:id="@+id/animcube"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp"
        app:cubeColors="@array/cube_colors" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:typeface="monospace"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout2"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_load_cube"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:gravity="center"
            android:text="Capture" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_pre_step"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:enabled="false"
            android:text="pre"/>

        <Button
            android:id="@+id/btn_next_step"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:enabled="false"
            android:text="next"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
    </LinearLayout>


</RelativeLayout>
